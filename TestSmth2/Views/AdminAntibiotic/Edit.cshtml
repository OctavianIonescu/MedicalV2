@model TestSmth2.Models.ViewModels.EditAntibioticRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Antibiotic - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">ID</label>
                <input type="text" id="id" class="form-control" asp-for="ID" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="Name" />
            </div>
            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminAntibiotic" asp-action="Delete">
                        Delete
                    </button>
                </div>
            </div>
        </form>
    }
    else
    {
        <p>Tag Not Found!</p>
    }
</div>